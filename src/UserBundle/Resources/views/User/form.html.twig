<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.first_name) }}
        <label for="user_first_name">Nome</label>
        {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.email) }}
        <label for="user_email">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    {% if not entity.id  %}
        <div class="form-group">
            <label for="user_name">Senha</label>
            <input type="password" id="user_plainpassword" name="user_custom[plainPassword]" maxlength="255" class="form-control" required="required" autocomplete="off">
        </div>
    {% else %}
        <div class="form-group">
            <label for="user_name">Senha</label>
            <input type="password" id="user_plainpassword" name="user_custom[plainPassword]" maxlength="255" class="form-control" autocomplete="off">
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_errors(form.celphone) }}
        <label for="user_celphone">Celular</label>
        {{ form_widget(form.celphone, {'attr': {'class': 'form-control telefone'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.phone) }}
        <label for="user_phone">Telefone</label>
        {{ form_widget(form.phone, {'attr': {'class': 'form-control telefone'}}) }}
    </div>

</div><!-- /.box-body -->
