<div class="box-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                {{ form_errors(form.first_name) }}
                <label for="affiliated_first_name">Nome</label>
                {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.email) }}
        <label for="affiliated_email">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    {% if not entity.id  %}
        <div class="form-group">
            <label for="affiliated_name">Senha</label>
            <input type="password" id="affiliated_plainpassword" name="affiliated_custom[plainPassword]" maxlength="255" class="form-control" required="required" autocomplete="off">
        </div>
    {% else %}
        <div class="form-group">
            <label for="affiliated_name">Senha</label>
            <input type="password" id="affiliated_plainpassword" name="affiliated_custom[plainPassword]" maxlength="255" class="form-control" autocomplete="off">
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_errors(form.celphone) }}
                <label for="affiliated_celphone">Celular</label>
                {{ form_widget(form.celphone, {'attr': {'class': 'form-control telefone'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_errors(form.phone) }}
                <label for="affiliated_phone">Telefone</label>
                {{ form_widget(form.phone, {'attr': {'class': 'form-control telefone'}}) }}
            </div>
        </div>
    </div>
</div><!-- /.box-body -->
