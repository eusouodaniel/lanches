{% extends '::Backend/base.html.twig' %}

{% block body %}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Região</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row ">
            <div class="col-xs-12 bs-50">
                <a href="{{ path('backend_region_new') }}" class="btn btn-success">Novo</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de Regiões</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Estado</th>
                                    <th>Cidade</th>
                                    <th>Nome</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for region in regions %}
                                <tr>
                                    <td>{{ region.state }}</td>
                                    <td>{{ region.city }}</td>
                                    <td>{{ region.name }}</td>
                                    <td>
                                      <a href="{{ path('backend_region_edit', { 'id': region.id }) }}" class="btn btn-primary">Editar</a>
                                      <a href="javascript:void(0);" data-url="{{ path('backend_region_delete', { 'id': region.id }) }}" class="btn btn-danger delete_item">Excluir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
