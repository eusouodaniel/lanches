{% extends '::Backend/base.html.twig' %}

{% block body %}
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Laboratorios</h1>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row ">
                <div class="col-xs-12 bs-50">
                    <a href="{{ path('backend_laboratory_new') }}" class="btn btn-success">Novo</a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Listagem de Laboratorios</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Ativo</th>
                                        <th>Acoes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for laboratory in laboratories %}
                                        <tr>
                                            <td>{{ laboratory.name }}</td>
                                            <td>
                                                {% if laboratory.active %}
                                                    <i class="fa fa-check" aria-hidden="true"></i>
                                                {% else %}
                                                    <i class="fa fa-times" aria-hidden="true"></i>
                                                {% endif %}
                                            </td>
                                            
                                            <td>
                                                <a href="{{ path('backend_product_laboratory_admin', {'id': laboratory.id }) }}" class="btn btn-success">Produtos</a>
                                                <a href="{{ path('backend_laboratory_edit', { 'id': laboratory.id }) }}" class="btn btn-primary">Editar</a>
                                                <a href="javascript:void(0);" data-url="{{ path('backend_laboratory_delete', { 'id': laboratory.id }) }}" class="btn btn-danger delete_item">Excluir</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}
