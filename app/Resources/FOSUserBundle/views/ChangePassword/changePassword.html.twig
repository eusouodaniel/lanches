{% extends '::Backend/base.html.twig' %}

{% block body -%}
    
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Usu√°rio</h1>
        </section>

        <!-- Main content -->
        <section class="content">
            
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Alterar Senha</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            
                            <form class="" action="{{ path('fos_user_change_password') }}" method="post" {{ form_enctype(form) }}>
                                
                                {{ form_widget(form._token) }}

                                {% block messages %}
                                    {{ parent() }}
                                    {{ form_errors(form) }}
                                {% endblock %}

                                <div class="box-body">

                                    <div class="form-group">
                                        {{ form_errors(form.current_password) }}
                                        <label for="bank_active">Senha Atual</label>
                                        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_errors(form.plainPassword.first) }}
                                        <label for="bank_active">Nova senha</label>
                                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                                    </div><!-- form-group -->

                                    <div class="form-group">
                                        {{ form_errors(form.plainPassword.second) }}
                                        <label for="bank_active">Confirmar nova senha</label>
                                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                                    </div> <!-- form-group -->

                                </div>

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                    <a href="{{ path('backend_home') }}" class="btn btn-default">Voltar</a>
                                </div>

                            </form>

                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->

{% endblock %}


